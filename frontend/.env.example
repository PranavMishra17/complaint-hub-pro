# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# Supabase Configuration (Client-side)
VITE_SUPABASE_URL=your-supabase-project-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Application Configuration
VITE_APP_NAME=Complaint Management System
VITE_APP_VERSION=1.0.0

# File Upload Configuration (Client-side limits)
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_FILES=3
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Feature Flags
VITE_ENABLE_REALTIME=true
VITE_ENABLE_FILE_UPLOADS=true
VITE_ENABLE_MARKDOWN_EDITOR=true

# Development
VITE_ENABLE_DEV_TOOLS=true